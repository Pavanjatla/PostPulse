<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PostPulse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PostPulse" parent="Base.Theme.PostPulse" />

    <!-- Textview heading style with font, size etc.-->
    <style name="TextAppearance.PostPulse.Headline" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/universalBW</item>
    </style>

    <style name="TextAppearance.PostPulse.SubHeading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/universalBW</item>
    </style>

    <style name="TextAppearance.PostPulse.Description" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/universalBW</item>
    </style>

</resources>